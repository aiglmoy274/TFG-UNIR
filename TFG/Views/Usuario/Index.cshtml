@model List<TFG.Models.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Usuarios";
}


<hr />
<form asp-action="BorrarUsuario" role="form">
    <div class="top-buffer"></div>
    <div class="panel-body">        
            <!--<div class="panel-heading panel-head">-->
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
                <div class="pull-right">
                    <a id="crearUsuario" asp-action="CrearEditarUsuario" class="btn btn-default btn-sm">
                        <i class="glyphicon glyphicon-plus"></i>  Nuevo Usuario
                    </a>
                    <span onclick="return confirm('Se perderán los datos. ¿Desea continuar?')">
                        <button data-dismiss="modal" id="borrarUsuarios" class="btn btn-danger btn-sm" type="submit">
                            <i class="glyphicon glyphicon-trash"></i> Borrar(Seleccionados)
                        </button>
                    </span>
                </div>
            </div>



            <div class="panel-body">
                <div class="top-buffer"></div>
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Codigo Centro</th>
                            <th>Nombre Centro</th>   
                            <th>Comunidad Autonoma</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>                              
                                    <input name="selBorrar" type="checkbox" value="@item.Id" />                            
                                </td>
                                <td>
                                    <a id="editarPerfil" asp-action="CrearEditarUsuario" asp-route-id="@item.Id">@item.CodigoCentro</a>
                                </td>
                                <td>
                                    @item.NombreCentro
                                </td>
                                <td>
                                    @item.DescripcionComunidadAutonoma
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
        </div>
</form>
