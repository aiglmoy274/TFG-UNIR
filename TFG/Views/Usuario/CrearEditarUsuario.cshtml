@model TFG.Models.ViewModels.UsuarioViewModel
@{
    if (String.IsNullOrEmpty(Model.Id))
    {
        ViewData["Title"] = "Crear Usuario";
    }
    else
    {
        ViewData["Title"] = "Editar Usuario";
    }
}


<h2>@ViewData["Title"]</h2>
<div class="panel-body">
    <form asp-action="CrearEditarUsuario" role="form">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos
                </div>
                <div class="panel-body">                    
                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="CodigoCentro" class="control-label"></label>
                            </dt>
                            <dd>                                
                                <input asp-for="CodigoCentro" class="form-control" />
                                <span asp-validation-for="CodigoCentro" class="text-danger"></span>
                            </dd>
                        </dl>
                    </div>
                    
                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="NombreCentro" class="control-label"></label>
                            </dt>
                            <dd>                                
                                <input asp-for="NombreCentro" class="form-control" />
                                <span asp-validation-for="NombreCentro" class="text-danger"></span>                                
                            </dd>
                        </dl>
                    </div>
                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="Email" class="control-label"></label>
                            </dt>
                            <dd>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </dd>
                        </dl>
                    </div>

                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="ComunidadAutonomaId" class="control-label"></label>
                            </dt>
                            <dd>
                                <select name="ComunidadAutonomaId" class="form-control" asp-items="ViewBag.ComunidadAutonomaId"></select>
                                <span asp-validation-for="ComunidadAutonomaId" class="text-danger"></span>
                            </dd>
                        </dl>
                    </div>

                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="PerfilNombre" class="control-label"></label>
                            </dt>
                            <dd>
                                <select name="PerfilNombre" class="form-control" asp-items="ViewBag.Perfiles"></select>
                                <span asp-validation-for="PerfilNombre" class="text-danger"></span>
                            </dd>
                        </dl>
                    </div>

                    <a asp-action="Index" class="btn btn-default">Atrás</a>                        
                    <button class="btn btn-success" id="Guardar" type="submit">Guardar</button>
                </div>
            </div>
        </div>
    </form>
</div>

