@model TFG.Models.Asignatura

@{

    if (String.IsNullOrEmpty(Model.Descripcion))
    {
        ViewData["Title"] = "Crear Asignatura";


    }
    else
    {
        ViewData["Title"] = "Editar Asignatura";
    }
    <h2>@ViewData["Title"]</h2>
}

<div class="panel-body">
    <form asp-action="CrearEditarAsignatura" role="form">
        <input id="id" class="form-control" type="hidden" value="@Model.Id" />
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos
                </div>
                <div class="alert-danger">
                    @Html.ValidationSummary(false)
                </div>
                <div class="panel-body">

                    <div class="form-group">



                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    Comunidad Autónoma
                                </dt>
                                <dd>
                                    <select id="ComunidadAutonomaSelect" name="ComunidadAutonomaId" class="form-control" asp-items="ViewBag.ComunidadAutonomaId"></select>
                                </dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    Plan de Estudio
                                </dt>
                                <dd>
                                    <select id="PlanEstudioSelect" name="PlanEstudioId" class="form-control" asp-items="ViewBag.PlanEstudioId"></select>
                                </dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    Curso Escolar
                                </dt>
                                <dd>
                                    <select id="CursoEscolarSelect" name="CursoEscolarId" class="form-control" asp-items="ViewBag.CursoEscolarId"></select>
                                </dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>
                                    Especialidad
                                </dt>
                                <dd>
                                    <!--Select con la lista de niveles educativos-->
                                    <select name="EspecialidadId" class="form-control" asp-items="ViewBag.EspecialidadId"></select>
                                    <span asp-validation-for="EspecialidadId" class="text-danger"></span>
                                </dd>
                            </dl>
                        </div>
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="Descripcion" class="control-label"></label>
                            </dt>
                            <dd>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="HorasSemanales" class="control-label"></label>
                            </dt>
                            <dd>
                                <input asp-for="HorasSemanales" class="form-control" />
                                <span asp-validation-for="HorasSemanales" class="text-danger"></span>
                            </dd>
                        </dl>




                    </div>


                    <a asp-action="Index" class="btn btn-default">Atrás</a>
                    <button class="btn btn-success" id="Guardar" type="submit">Guardar</button>
                </div>
            </div>
        </div>
    </form>
</div>

