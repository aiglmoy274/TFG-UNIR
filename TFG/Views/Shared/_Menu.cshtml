@using Microsoft.AspNetCore.Identity
@using TFG.Models


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



@if (SignInManager.IsSignedIn(User))
{
   @if (User.IsInRole("Administrador"))
   {
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Gestión Usuarios</a>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a asp-controller="Usuario" asp-action="Index">Usuarios</a>
            </li>
            <li>
                <a asp-controller="Perfil" asp-action="Index">Perfiles</a>
            </li>

        </ul>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Maestros</a>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a asp-controller="ComunidadAutonomas" asp-action="Index">Comunidades Autonomas</a>
            </li>
            <li>
                <a asp-controller="Especialidad" asp-action="Index">Especialidades</a>
            </li>
            <li>
                <a asp-controller="NivelEducativo" asp-action="Index">Niveles Educativos</a>
            </li>
            <li>
                <a asp-controller="CursoEscolar" asp-action="Index">Cursos Escolares</a>
            </li>
            <li><a asp-controller="PlanEstudio" asp-action="Index">Planes de Estudio</a></li>
            <li><a asp-controller="Asignatura" asp-action="Index">Asignaturas</a></li>
        </ul>
    </li>

   }
    @if (User.IsInRole("Usuario"))
    {
        <li>
            <a asp-controller="Planificacion" asp-action="Index">Planificaciones</a>
        </li>
    }
}