@model List<TFG.Models.ViewModels.PerfilListViewModel>

@{
    ViewData["Title"] = "Perfiles";
}


<hr />
<form asp-action="BorrarPerfil" role="form">
    <div class="top-buffer"></div>
    <div class="panel-body">        
            <!--<div class="panel-heading panel-head">-->
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewData["Title"]
                <div class="pull-right">
                    <a id="crearPerfil" asp-action="CrearEditarPerfil" class="btn btn-default btn-sm">
                        <i class="glyphicon glyphicon-plus"></i>  Nuevo Perfil
                    </a>
                    <span onclick="return confirm('Se perderán los datos. ¿Desea continuar?')">
                        <button data-dismiss="modal" id="Cancelar" class="btn btn-danger btn-sm" type="submit">
                            <i class="glyphicon glyphicon-trash"></i> Borrar(Seleccionados)
                        </button>
                    </span>
                </div>
            </div>
            

            <div class="panel-body">
                <div class="top-buffer"></div>
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Descripcion</th>
                            <th>Número de Usuarios</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.NumeroUsuario == 0)
                                    {
                                        <input name="selBorrar" type="checkbox" value="@item.Id" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" id="@item.Id" disabled />

                                    }
                                </td>
                                <td>
                                    <a id="editarPerfil" asp-action="CrearEditarPerfil" asp-route-id="@item.Id">@item.Nombre</a>
                                </td>
                                <td>
                                    @item.NumeroUsuario
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            </div>
        </div>
</form>
