<script type="text/javascript">
    function EditarPlanificacionReduccion(planificacionReduccionId) {
        $.ajax({
            url: '@Url.Action("EditarPlanificacionReduccion", "Planificacion")',
            data: { Id: planificacionReduccionId },
            datatype: "json",
            success: function (data) {
                $("#DescripcionPlaRed").val(data["descripcion"]);
                $("#HorasSemanalesPlaRed").val(data["horasSemanales"]);
                $("#PlanificacionIdPlaRed").val(data["id"]);
                $("#EspecialidadIdPlaRed option[value=" + data["especialidadId"] + "]").attr("selected", true);
            },
        })

    }
</script>
 


<div id="editarPlanificacionReduccionModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="editarPlanificacionReduccionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                
                    <div class="modal-header">
                        
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                            
                        <h4 class="modal-title" id="editarPlanificacionReduccionModalLabel">Editar Reduccion Horaria</h4>
                    </div>
                
                <form id="editarPlanificacionReduccionForm" method="post" asp-action="EditarPlanificacionReduccion" role="form">
                    <div class="modal-body">
                        <input name="PlanificacionIdPlaRed" id="PlanificacionIdPlaRed" class="form-control" type="hidden" />
                        <div class="form-group">                            
                            <label class="control-label">Descripción</label>
                            <input name="DescripcionPlaRed" id="DescripcionPlaRed" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Horas Semanales</label>
                            <input name="HorasSemanalesPlaRed" type="number" id="HorasSemanalesPlaRed" class="form-control" />                          
                        </div>      
                        <div class="form-group">
                            <label class="control-label">Especialidad</label>
                            <select id="EspecialidadIdPlaRed" name="EspecialidadId" class="form-control" asp-items="ViewBag.EspecialidadId"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        
                        <button type="button" class="btn btn-default" data-dismiss="modal">Atrás</button>
                        
                        <button class="btn btn-success" id="Guardar" type="submit">Guardar</button>
                            
                    </div>
                </form>
                    
            </div>
        </div>

    </div>


   