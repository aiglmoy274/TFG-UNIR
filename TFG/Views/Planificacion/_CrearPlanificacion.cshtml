@model TFG.Models.Planificacion
    


<div id="crearModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="crearModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                
                    <div class="modal-header">
                        
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                            
                        <h4 class="modal-title" id="borrarModalLabel">Crear Planificación</h4>
                    </div>
                
                <form id="crearPlanificacionForm" method="post" asp-action="CrearPlanificacion" role="form">
                    <div class="modal-body">
                        <div class="form-group">                            
                            <label asp-for="Descripcion" class="control-label"></label>                                                           
                            <input asp-for="Descripcion" class="form-control" />                            
                        </div>
                        <div class="form-group">
                            <label asp-for="HorasSemanales" class="control-label"></label>                      
                            <input asp-for="HorasSemanales" class="form-control" />                            
                        </div>      
                    </div>
                    <div class="modal-footer">
                        
                        <button type="button" class="btn btn-default" data-dismiss="modal">Atrás</button>
                        
                        <button class="btn btn-success" id="Guardar" type="submit">Guardar</button>
                            
                    </div>
                </form>
                    
            </div>
        </div>

    </div>


   