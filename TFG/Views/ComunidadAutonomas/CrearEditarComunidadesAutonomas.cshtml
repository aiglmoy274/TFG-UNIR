Controlador que interactua con la vista: ComunidadAutonomasController

Vista que muestra:
    Datos para crear o editar una Comunidad Autónoma
    Botón para volver atrás
    Botón para guardar los datos

-->
<!--Modelo a mostrar-->
@model TFG.Models.ComunidadAutonoma

@{

    if (String.IsNullOrEmpty(Model.Descripcion))/*Si es campo descripción es vacío se está cargando el formulario para crear*/
    {
        ViewData["Title"] = "Crear Comunidad Autónoma";
    }
    else/*Se está cargando el formulario para editar*/
    {
        ViewData["Title"] = "Editar Comunidad Autónoma";
    }
    <h2>@ViewData["Title"]</h2>
}

<div class="panel-body">
    <!--Formulario que será enviado por POST al pulsar en el botón Guardar-->
    <form asp-action="CrearEditarComunidadesAutonomas" role="form">
        <input id="ComunidadAutonomaId" class="form-control" type="hidden" value="@Model.ComunidadAutonomaId" />
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos
                </div>
                <div class="alert-danger">
                    @Html.ValidationSummary(false)
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <dl class="dl-horizontal">
                            <dt>
                                <label asp-for="Descripcion" class="control-label"></label>
                            </dt>
                            <dd>
                                <input asp-for="Descripcion" class="form-control" />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </dd>
                        </dl>
                    </div>


                    <a asp-action="Index" class="btn btn-default">Atrás</a>
                    <button class="btn btn-success" id="Guardar" type="submit">Guardar</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}